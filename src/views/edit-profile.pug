extends validation-layout

block validation-heading
    h1#title Edit Your Profile
    hr

block validation-content
    div#profile-info
        form(id="register-form" class="validation-form" method="post" action="/edit-profile")
            div.form-group
                label(for="stage-name") Stage Name
                input(type="text" class="form-control" name="stage_name" id="stage-name" placeholder="Eminem" value=stage_name)
            div.form-group
                label(for="email") Email
                input(type="email" class="form-control" name="email" id="email" placeholder="johndoe@email.com" value=email)
            div.form-group
                label Date of Birth
                div.form-row
                    div.col-md-4
                        select(class="custom-select" name="day" value=day)
                            - var num = 1;
                            while num <= 31
                                option(value=num)= num++
                    div.col-md-4
                        select(class="custom-select" name="month" value=month)
                            - var num = 1;
                            - var months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
                                for month in months
                                    option(value=num++)= month
                    div.col-md-4
                        select(class="custom-select" name="year" value=year)
                            - var num = 2020;
                                while num >= 1920
                                    option(value=num)= num--
            div.form-group
                label(for="profile-pic") Profile Picture
                input(type="file" class="form-control-file" name="profile-pic" id="profile-pic")
            div.form-group
                label(for="interests") Interests
                input(type="text" class="form-control" name="interests" id="interests" placeholder="Running, football, .." value=interests)
            div.form-group
                label(for="interests") Favourite Genre(s)
                input(type="text" class="form-control" name="favourite_genres" id="favourite-genres" placeholder="Rap, Jazz, .." value=favourite_genres)
            div.form-group
                label(for="email") Email
                input(type="email" class="form-control" name="email" id="email" placeholder="johndoe@email.com" value=email)
            button(class="submit" type="submit" class="btn btn-primary" data-toggle="modal" data-target="#successModal") Submit